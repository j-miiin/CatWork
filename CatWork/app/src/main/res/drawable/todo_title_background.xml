    <item android:bottom="3.5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryLightColor"/>
            <corners android:topLeftRadius="10dp"
            android:topRightRadius="10dp"/>
        </shape>
    </item>
</layer-list>