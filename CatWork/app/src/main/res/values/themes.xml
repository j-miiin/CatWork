<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CatWork" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/nanum_font</item>
    </style>

    <!-- Alarm Time Picker -->
    <style name="Theme.AlarmTimePicker" parent="Theme.CatWork">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/nanum_font</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:backgroundTint">@color/primaryLightColor</item>
    </style>
</resources>